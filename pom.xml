			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>com.sjy</groupId>
			<artifactId>crm-common</artifactId>
			<version>0.0.5-SNAPSHOT</version>
			<optional>true</optional>
		</dependency>
		<dependency>
